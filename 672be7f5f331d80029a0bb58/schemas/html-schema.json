{
    "$schema": "http://bigcontent.io/cms/schema/v1/schema#",
    "id": "https://demostore.amplience.com/content/html",
    "title": "HTML Block",
    "description": "A block than can hold raw HTML (formerly External Block)",
    "allOf": [
        {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
        }
    ],
    "type": "object",
    "properties": {
        "external": {
            "type": "string",
            "title": "External",
            "description": "Insert HTML code",
            "validation": "Please enter less than 2000 characters",
            "minLength": 0,
            "maxLength": 2000,
            "ui:component": {
                "name": "text-area",
                "params": {
                    "autosize": "true"
                }
            }
        }
    }
}