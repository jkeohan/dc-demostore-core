{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://demostore.amplience.com/lib/menu",
    "type": "object",
    "title": "Menu",
    "definitions": {
        "menuItemConfig": {
            "type": "object",
            "title": "Menu",
            "properties": {
                "priority": {
                    "type": "integer",
                    "description": "Integers only, lower numbers show first in the menu",
                    "title": "Priority"
                },
                "content": {
                    "title": "Menu Content",
                    "allOf": [
                        {
                            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content-link"
                        },
                        {
                            "properties": {
                                "contentType": {
                                    "enum": [
                                        "https://demostore.amplience.com/content/simple-banner"
                                    ]
                                }
                            }
                        }
                    ]
                }
            },
            "required": [
                "priority"
            ]
        }
    }
}