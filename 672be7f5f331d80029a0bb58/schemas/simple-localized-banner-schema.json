{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://demostore.amplience.com/content/simple-localized-banner",
    "title": "Simple Localized Banner",
    "description": "Simple Localized Banner",
    "allOf": [
        {
            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/content"
        }
    ],
    "type": "object",
    "properties": {
        "image": {
            "title": "Image",
            "description": "Main Image",
            "type": "object",
            "allOf": [
                {
                    "$ref": "https://demostore.amplience.com/lib/di-image"
                }
            ]
        },
        "opacity": {
            "title": "Opacity",
            "description": "The Opacity of the text overlay panel",
            "type": "number",
            "default": 0.9,
            "ui:component": {
                "name": "slider",
                "params": {
                    "defaultValue": 0.9,
                    "min": 0,
                    "max": 1,
                    "inverted": false,
                    "marks": [
                        {
                            "value": 0,
                            "label": "Transparent"
                        },
                        {
                            "value": 0.25,
                            "label": "Low"
                        },
                        {
                            "value": 0.5,
                            "label": "Medium"
                        },
                        {
                            "value": 0.75,
                            "label": "High"
                        },
                        {
                            "value": 1,
                            "label": "Solid"
                        }
                    ],
                    "step": 0.05
                }
            }
        },
        "textPositioning": {
            "title": "Panel Positioning",
            "type": "object",
            "description": "How the Text Panel is positioned over the banner",
            "ui:component": {
                "name": "grid",
                "params": {
                    "numColumns": 12,
                    "columns": [
                        {
                            "span": 6,
                            "pointers": [
                                "/textPositionHorizontal"
                            ]
                        },
                        {
                            "span": 6,
                            "pointers": [
                                "/textPositionVertical"
                            ]
                        }
                    ]
                }
            },
            "properties": {
                "textPositionHorizontal": {
                    "title": "Horizontal Text Position",
                    "description": "Select: Left / Center / Right",
                    "type": "string",
                    "default": "left",
                    "enum": [
                        "left",
                        "center",
                        "right"
                    ]
                },
                "textPositionVertical": {
                    "title": "Vertical Text Position",
                    "description": "Select: Top / Middle / Bottom",
                    "type": "string",
                    "default": "top",
                    "enum": [
                        "top",
                        "middle",
                        "bottom"
                    ]
                }
            }
        },
        "bannerText": {
            "title": "Banner Text Settings",
            "type": "object",
            "properties": {
                "header": {
                    "title": "Header",
                    "description": "Header text for the banner",
                    "validation": "Please enter less than 255 characters",
                    "ui:extension": {
                        "name": "localisation"
                    },
                    "allOf": [
                        {
                            "$ref": "http://bigcontent.io/cms/schema/v1/core#/definitions/localized-value"
                        },
                        {
                            "properties": {
                                "values": {
                                    "items": {
                                        "properties": {
                                            "value": {
                                                "title": "Header",
                                                "description": "Header text for the banner",
                                                "type": "string",
                                                "minLength": 0,
                                                "maxLength": 255
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    ]
                },
                "subheader": {
                    "title": "Subheader",
                    "description": "Add Subheader text",
                    "allOf": [
                        {
                            "$ref": "http://bigcontent.io/cms/schema/v1/localization#/definitions/localized-string"
                        }
                    ]
                },
                "description": {
                    "title": "Description",
                    "description": "Add Description text",
                    "allOf": [
                        {
                            "$ref": "http://bigcontent.io/cms/schema/v1/localization#/definitions/localized-string"
                        }
                    ]
                }
            }
        },
        "ctaSettings": {
            "title": "Call-to-Action Settings",
            "type": "object",
            "properties": {
                "buttonText": {
                    "title": "CTA Text",
                    "description": "Add Call-to-Action text",
                    "allOf": [
                        {
                            "$ref": "http://bigcontent.io/cms/schema/v1/localization#/definitions/localized-string"
                        }
                    ]
                },
                "linkUrl": {
                    "title": "CTA URL",
                    "type": "string",
                    "minLength": 0,
                    "maxLength": 10000
                }
            }
        }
    },
    "ui:component": {
        "name": "tabs",
        "params": {
            "tabs": {
                "defaultTab": "Image",
                "orientation": "horizontal",
                "variant": "default",
                "grow": false,
                "items": [
                    {
                        "label": "Image",
                        "pointers": [
                            "/image"
                        ]
                    },
                    {
                        "label": "Overlay Panel",
                        "pointers": [
                            "/opacity",
                            "/textPositioning",
                            "/bannerText",
                            "/ctaSettings"
                        ]
                    }
                ]
            }
        }
    },
    "propertyOrder": [
        "image",
        "opacity",
        "textPositioning",
        "bannerText",
        "ctaSettings"
    ]
}